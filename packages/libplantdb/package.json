{
  "private": true,
  "name": "@plantdb/libplantdb",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "type": "module",
  "module": "./output/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf tsconfig.tsbuildinfo output typings",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out ../documentation/docs/reference/libplantdb ./source/index.ts",
    "lint": "eslint source && tsc --noEmit"
  },
  "types": "./typings/index.d.ts",
  "dependencies": {
    "luxon": "2.4.0"
  },
  "devDependencies": {
    "@types/luxon": "2.3.2",
    "tslib": "2.4.0",
    "typedoc": "0.22.15",
    "typedoc-plugin-markdown": "3.12.1",
    "typescript": "4.6.4"
  },
  "exports": {
    ".": {
      "import": "./output/index.js",
      "types": "./typings/index.d.ts"
    },
    "./*": {
      "import": "./output/*.js",
      "types": "./typings/*.d.ts"
    }
  }
}
